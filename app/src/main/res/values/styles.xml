<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>

        <item name="materialAlertDialogTheme">@style/AppTheme.Alert</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <!--Text Styles-->
        <item name="textAppearanceBody1">@style/TextAppearance.AppTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppTheme.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AppTheme.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AppTheme.Subtitle2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppTheme.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppTheme.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AppTheme.Overline</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?colorOnPrimary</item>
        <item name="boxStrokeColor">?colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="AppTheme.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?colorOnPrimary</item>
    </style>

</resources>
